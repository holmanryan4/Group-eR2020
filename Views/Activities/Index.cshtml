@model IEnumerable<Authentication.Models.Activity>

@{
    ViewData["Title"] = "Index";
}

    <h1>Group-eR Extravaganz</h1>

<div class="row">
    <div class="col-md-10">
        <h3>Events Itinerary </h3>

        

        <p>
            <a asp-action="Create">Create Activity</a>
        </p>
        <table class="table" style="margin-bottom: 20px">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ActivityId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ActivityId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ActivityId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <h5>Need a Lyft?</h5>
